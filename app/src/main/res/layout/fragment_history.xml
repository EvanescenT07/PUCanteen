<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context="com.irfansaf.pucanteen.homepage.HistoryFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/reviewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_history"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="50dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintTop_toBottomOf="@+id/reviewTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/historyCardView"
                android:layout_width="325dp"
                android:layout_height="175dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/card_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/childCardView"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/card_background2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/orderID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order No. 000001"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0"
                                android:layout_marginTop="10dp"
                                app:layout_constraintHorizontal_bias="0"
                                android:layout_marginStart="20dp"/>

                            <TextView
                                android:id="@+id/orderTotalPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp.30.000"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/orderID"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="60dp"
                                android:layout_marginEnd="20dp"/>

                            <TextView
                                android:id="@+id/orderDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12/12/2020"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                app:layout_constraintTop_toBottomOf="@+id/orderID"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0"
                                app:layout_constraintHorizontal_bias="0"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="20dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/orderDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Nasi Padang"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/childCardView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:layout_marginTop="10dp"
                        app:layout_constraintHorizontal_bias="0"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/orderPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.15.000"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/orderDetails"
                        app:layout_constraintTop_toBottomOf="@+id/childCardView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="60dp"/>

                    <TextView
                        android:id="@+id/orderDetails2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Nasi Padang"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/orderDetails"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:layout_marginTop="10dp"
                        app:layout_constraintHorizontal_bias="0"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/orderPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.15.000"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/orderDetails2"
                        app:layout_constraintTop_toBottomOf="@+id/orderDetails"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="60dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/historyCardView2"
                android:layout_width="325dp"
                android:layout_height="175dp"
                android:backgroundTint="@color/card_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/historyCardView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="30dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/childCardView2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/card_background2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/orderID2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order No. 000001"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0"
                                android:layout_marginTop="10dp"
                                app:layout_constraintHorizontal_bias="0"
                                android:layout_marginStart="20dp"/>

                            <TextView
                                android:id="@+id/orderTotalPrice2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp.30.000"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/orderID2"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="60dp"
                                android:layout_marginEnd="20dp"/>

                            <TextView
                                android:id="@+id/orderDate2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12/12/2020"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                app:layout_constraintTop_toBottomOf="@+id/orderID2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintVertical_bias="0"
                                app:layout_constraintHorizontal_bias="0"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="20dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/orderDetailsCardView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Nasi Padang"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/childCardView2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:layout_marginTop="10dp"
                        app:layout_constraintHorizontal_bias="0"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/orderPriceCardView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.15.000"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/orderDetailsCardView2"
                        app:layout_constraintTop_toBottomOf="@+id/childCardView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="60dp"/>

                    <TextView
                        android:id="@+id/orderDetails2CardView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Nasi Padang"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/orderDetailsCardView2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:layout_marginTop="10dp"
                        app:layout_constraintHorizontal_bias="0"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/orderPrice2CardView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.15.000"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toEndOf="@+id/orderDetails2CardView2"
                        app:layout_constraintTop_toBottomOf="@+id/orderDetailsCardView2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="60dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>